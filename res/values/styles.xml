<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="styleLabel">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorLabel</item>
    </style>
    <style name="styleValue">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="styleLabel_2">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>
    <style name="info_value">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="popupMenu" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@color/background</item>
    </style>
    <style name="actionBar" parent="android:Widget.Holo.Light.ActionBar">
        <item name="android:colorBackground">@color/background</item>
    </style>
    <style name="ThemeActionBar" parent="android:style/Widget.Holo.Light">
        <item name="android:actionBarStyle">@style/actionBar</item>
    </style>
</resources>