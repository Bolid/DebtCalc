<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="@color/background">

    <LinearLayout
            android:id="@+id/listInfoDebtLabel"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:paddingTop="10dp">
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="№"
                android:id="@+id/textView"
                android:gravity="center_vertical|right"
                style="@style/styleLabel_2" android:textSize="12sp" android:layout_weight="0.3"
                android:paddingRight="5dp"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Платеж"
                android:id="@+id/textView1" android:layout_weight="1"
                android:gravity="center_vertical|right" style="@style/styleLabel_2" android:textSize="12sp"
                android:paddingRight="15dp"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Дата"
                android:id="@+id/textView2" style="@style/styleLabel_2" android:textSize="12sp"
                android:layout_weight="1" android:gravity="center_vertical|right"
                android:paddingRight="15dp"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Сумма"
                android:id="@+id/textView4" android:layout_weight="1"
                android:gravity="center_vertical|right" style="@style/styleLabel_2" android:textSize="12sp"
                android:paddingRight="15dp"/>
    </LinearLayout>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView"
            android:layout_below="@id/listInfoDebtLabel">
        <LinearLayout
                android:id="@+id/llPaymentInfo"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
        </LinearLayout>
    </ScrollView>
</LinearLayout>