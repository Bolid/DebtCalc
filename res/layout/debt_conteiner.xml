<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/llDebtContainer"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="@color/background"
              android:paddingBottom="10dp" android:paddingLeft="5dp" android:paddingRight="5dp"
              android:layout_gravity="center">
    <TextView
            android:id="@+id/creditType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            style="@style/styleLabel"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="15dp" android:layout_marginLeft="5dp"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:id="@+id/textView1"
            android:layout_marginLeft="5dp" android:layout_marginRight="5dp"
            android:background="@color/colorValue"
            android:layout_below="@id/creditType"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/container_balance_credit"
            android:id="@+id/textView2"
            android:textStyle="bold" style="@style/styleValue"
            android:layout_alignLeft="@+id/creditType" android:layout_below="@+id/textView1"/>
    <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/containerBut"
            android:background="@drawable/but_press"
            android:layout_alignRight="@+id/textView1" android:layout_below="@+id/textView1"
            android:layout_alignBottom="@+id/textView4" android:textStyle="bold"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/containerBalance"
            style="@style/styleValue"
            android:layout_toLeftOf="@+id/containerBut" android:layout_below="@+id/textView1"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/container_date_credit"
            android:id="@+id/textView4"
            style="@style/styleValue" android:textStyle="bold"
            android:layout_alignLeft="@+id/creditType" android:layout_below="@+id/textView2"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/containerDate"
            style="@style/styleValue"
            android:layout_toLeftOf="@+id/containerBut" android:layout_below="@+id/textView2"/>
</RelativeLayout>