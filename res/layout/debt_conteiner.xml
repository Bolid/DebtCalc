<?xml version="1.0" encoding="utf-8"?>


<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
               android:orientation="vertical"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" android:background="#F2F2F2">
    <RelativeLayout
            android:id="@+id/llDebtContainer"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/container_press"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_gravity="center" android:layout_margin="5dp">
        <TextView
                android:id="@+id/creditType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            style="@style/styleLabel"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="15dp" android:layout_marginLeft="5dp" android:textAllCaps="true"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:id="@+id/textView1"
            android:layout_marginLeft="5dp" android:layout_marginRight="5dp"
            android:background="@color/colorValue"
            android:layout_below="@id/creditType"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/container_balance_credit"
            android:id="@+id/textView2"
            android:textStyle="bold" style="@style/styleValue"
            android:layout_alignLeft="@+id/creditType" android:layout_below="@+id/textView1"
            android:capitalize="characters" android:paddingTop="5dp" android:textAllCaps="true"
            android:textColor="@android:color/darker_gray"/>
    <Button
            android:layout_width="120dp"
            android:layout_height="fill_parent"
            android:id="@+id/containerBut"
            android:background="@drawable/but_press"
            android:layout_alignRight="@+id/textView1" android:layout_below="@+id/textView1"
            android:layout_alignBottom="@+id/balanceTermCredit" android:textStyle="bold"
            android:layout_marginTop="3dp" android:textSize="28sp" android:gravity="center_vertical|right"
            android:lines="1" android:paddingRight="5dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/containerBalance"
            android:paddingRight="10dp"
            style="@style/styleValue"
            android:layout_toLeftOf="@+id/containerBut" android:layout_below="@+id/textView1" android:paddingTop="5dp"
            android:textColor="@android:color/black"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/containerBalanceTerm"
            style="@style/styleValue" android:textStyle="bold"
            android:layout_toLeftOf="@+id/containerBut" android:layout_below="@+id/textView2"
            android:paddingRight="10dp" android:paddingTop="3dp" android:textColor="@android:color/black"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="3dp"
            android:id="@+id/containerDate"
            style="@style/styleLabel"
            android:layout_alignRight="@+id/textView1" android:layout_alignTop="@+id/creditType"
            android:textColor="@android:color/darker_gray"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/container_balance_term_credit"
            android:id="@+id/balanceTermCredit" android:layout_alignLeft="@+id/creditType"
            android:layout_below="@+id/textView2" style="@style/styleValue" android:paddingTop="3dp" android:textAllCaps="true"
            android:textColor="@android:color/darker_gray"/>
    </RelativeLayout>
</LinearLayout>