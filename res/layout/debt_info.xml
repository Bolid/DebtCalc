<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="@color/background_app"
              android:orientation="vertical">

    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/scrollView" android:layout_alignRight="@+id/linearLayout2"
            android:layout_above="@+id/view" android:layout_below="@+id/linearLayout2"
            android:layout_marginLeft="5dp" android:layout_marginTop="5dp" android:layout_marginRight="5dp"
            android:layout_alignBottom="@+id/view">
        <LinearLayout
                android:id="@+id/infoDebtLayout"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_alignRight="@+id/linearLayout5" android:layout_below="@+id/linearLayout5">
            <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content"
                          android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
                          android:paddingTop="5dp" android:id="@+id/linearLayout8" android:layout_centerHorizontal="true"
                          android:layout_alignParentTop="true" android:paddingBottom="5dp">
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/imageView3"
                           android:src="@drawable/info" android:tint="@color/colorIcon"/>
                <TextView style="@style/styleLabel_2" android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="@string/ill_details" android:id="@+id/textView3"
                          android:textColor="@color/colorIcon" android:paddingLeft="5dp"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" android:background="@drawable/container_press"
                    android:id="@+id/llOverPay">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" android:gravity="center_vertical" android:padding="5dp">
                    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                               android:id="@+id/imageView7" android:src="@drawable/perc"
                               android:layout_gravity="center_vertical" android:tint="@android:color/darker_gray"/>
                    <TextView style="@style/styleLabel_2" android:layout_width="0dp" android:layout_height="wrap_content"
                              android:text="@string/mll_details_overpayment" android:id="@+id/textView9"
                              android:layout_weight="1" android:paddingLeft="5dp" android:layout_gravity="center_vertical"
                              android:textSize="16sp"/>
                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/infoDeltaOnePayment" android:layout_gravity="right" style="@style/info_value"
                            android:layout_weight="1"
                            />
                </LinearLayout>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp" android:id="@+id/llOverAllPay">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="При постоянной уплате указанной суммы"
                            android:id="@+id/textView" android:paddingLeft="5dp" android:paddingTop="5dp"
                            android:textStyle="bold"
                            style="@style/styleLabel_2" android:textSize="10sp"/>
                    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                                  android:layout_height="wrap_content" android:paddingRight="5dp" android:paddingLeft="5dp"
                                  android:gravity="center_vertical" android:paddingTop="5dp" android:paddingBottom="5dp"
                            >
                        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                   android:id="@+id/imageView11" android:src="@drawable/perc"
                                   android:layout_gravity="center_vertical" android:tint="@android:color/darker_gray"/>
                        <TextView style="@style/styleLabel_2" android:layout_width="0dp" android:layout_height="wrap_content"
                                  android:text="@string/mll_details_overpayment" android:id="@+id/textView12"
                                  android:layout_weight="1" android:paddingLeft="5dp" android:textSize="16sp"/>
                        <TextView style="@style/info_value" android:layout_width="0dp" android:layout_height="wrap_content"
                                  android:id="@+id/infoDeltaAllPayment" android:layout_weight="1"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" android:background="@drawable/container_press"
                    android:id="@+id/llTotalPay">
                <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                              android:layout_height="wrap_content"
                              android:id="@+id/linearLayout" android:gravity="center_vertical"
                              android:paddingLeft="5dp" android:paddingTop="5dp" android:paddingRight="5dp">
                    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                               android:id="@+id/imageView8" android:src="@drawable/sum"
                               android:layout_gravity="center_vertical" android:tint="@android:color/darker_gray"/>
                    <TextView style="@style/styleLabel_2" android:layout_width="0dp" android:layout_height="wrap_content"
                              android:text="@string/mll_details_total" android:id="@+id/textView8" android:paddingLeft="5dp"
                              android:layout_weight="1" android:textSize="16sp"/>
                    <TextView style="@style/info_value" android:layout_width="0dp" android:layout_height="wrap_content"
                              android:id="@+id/tvTotalOnePay" android:layout_weight="1"
                            />
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" android:paddingBottom="5dp">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="удорожание покупки на"
                            android:id="@+id/textView10" android:paddingLeft="32dp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvRiceOver" android:paddingLeft="5dp"
                            android:textColor="@android:color/black"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp" android:id="@+id/llTotalAllPay">
                    <TextView style="@style/styleLabel_2" android:layout_width="wrap_content"
                              android:layout_height="wrap_content" android:text="При постоянной уплате указанной суммы"
                              android:id="@+id/textView4" android:paddingLeft="5dp" android:paddingTop="5dp"
                              android:textStyle="bold"
                              android:textSize="10sp"/>
                    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                                  android:layout_height="wrap_content" android:paddingLeft="5dp" android:paddingRight="5dp"
                                  android:gravity="center_vertical" android:paddingTop="5dp" android:paddingBottom="5dp"
                                  android:id="@+id/linearLayout5">
                        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                   android:id="@+id/imageView9" android:src="@drawable/clock32"
                                   android:layout_gravity="center_vertical" android:tint="@android:color/darker_gray"/>
                        <TextView style="@style/styleLabel_2" android:layout_width="0dp" android:layout_height="wrap_content"
                                  android:text="@string/container_balance_term_credit" android:id="@+id/textView7"
                                  android:layout_weight="1" android:paddingLeft="5dp" android:textSize="16sp"
                                  android:autoText="false"/>
                        <TextView style="@style/info_value" android:layout_width="0dp" android:layout_height="wrap_content"
                                  android:id="@+id/digitAllPay" android:paddingLeft="5dp" android:layout_weight="1"/>
                    </LinearLayout>
                    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                                  android:layout_height="wrap_content" android:paddingRight="5dp" android:paddingLeft="5dp"
                                  android:gravity="center_vertical" android:paddingTop="5dp"
                                  android:id="@+id/linearLayout1">
                        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                   android:id="@+id/imageView6" android:src="@drawable/sum"
                                   android:layout_gravity="center_vertical" android:tint="@android:color/darker_gray"/>
                        <TextView style="@style/styleLabel_2" android:layout_width="0dp" android:layout_height="wrap_content"
                                  android:text="@string/mll_details_total" android:id="@+id/textView1" android:paddingLeft="5dp"
                                  android:layout_weight="1" android:textSize="16sp"/>
                        <TextView style="@style/info_value" android:layout_width="0dp" android:layout_height="wrap_content"
                                  android:id="@+id/tvTotaAllPay" android:layout_weight="1"/>
                    </LinearLayout>
                    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                                  android:layout_height="fill_parent" android:paddingBottom="5dp"
                                  android:id="@+id/linearLayout4">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:text="удорожание покупки на" android:id="@+id/textView11"
                                  android:paddingLeft="32dp"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:id="@+id/tvRiceOverAll" android:paddingLeft="5dp"
                                  android:textColor="@android:color/black"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_gravity="center_horizontal" android:paddingTop="5dp"
            android:id="@+id/linearLayout3"
            android:layout_centerHorizontal="true" android:layout_alignParentTop="true" android:paddingBottom="5dp">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView" android:src="@drawable/ok" android:tint="@color/colorIcon"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_layout_label_title"
                android:id="@+id/textView2" style="@style/styleLabel_2" android:textColor="@color/colorIcon"
                android:paddingLeft="5dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/background_light" android:paddingTop="5dp"
            android:paddingBottom="5dp" android:id="@+id/linearLayout2"
            android:layout_alignRight="@+id/linearLayout4" android:layout_below="@+id/linearLayout3">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView1" android:src="@drawable/dollar_24" android:tint="@android:color/darker_gray"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/infoDebt"
                style="@style/styleValue" android:textColor="@android:color/darker_gray"
                android:layout_weight="1" android:singleLine="true"
                android:paddingRight="5dp" android:layout_gravity="center_vertical"
                android:gravity="center_vertical|center_horizontal" android:textSize="14sp"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView4" android:src="@drawable/clock_24"
                android:tint="@android:color/darker_gray"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/infoTerm" android:layout_weight="1" android:singleLine="true"
                android:layout_gravity="center_vertical" android:paddingRight="5dp"
                android:textColor="@android:color/darker_gray" style="@style/styleValue"
                android:gravity="center_vertical|center_horizontal" android:textSize="14sp"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView5" android:src="@drawable/graph_24"
                android:tint="@android:color/darker_gray"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/infoPercent" android:layout_weight="1" android:singleLine="true"
                android:layout_gravity="center_vertical" android:paddingRight="5dp"
                android:textColor="@android:color/darker_gray" style="@style/styleValue"
                android:gravity="center_vertical|center_horizontal" android:textSize="14sp"/>
    </LinearLayout>
    <View android:layout_width="fill_parent"
                         android:layout_height="5dp"
                         android:background="@drawable/shadow"
                         android:id="@+id/view"
                         android:layout_above="@+id/llPayControl"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/background_light"
            android:id="@+id/llPayControl" android:layout_alignParentLeft="true" android:paddingBottom="5dp" android:layout_alignParentBottom="true">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent" android:id="@+id/llLabelControlPay">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/main_layout_label_credit_dopPayment"
                    android:id="@+id/textView5" style="@style/styleLabel_2" android:paddingLeft="5dp"
                    android:paddingTop="5dp" android:paddingRight="5dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="если в следующем месяце заплатить сумму"
                    android:id="@+id/textView6" android:paddingLeft="5dp" android:paddingBottom="5dp"/>
        </LinearLayout>
        <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginBottom="10dp" android:id="@+id/rlControlPay">
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/etPayment"
                    android:inputType="numberDecimal" style="@style/styleValue"
                    android:textSize="34sp" android:singleLine="true" android:layout_weight="1"
                    android:layout_alignParentLeft="false" android:layout_alignParentTop="false"
                    android:text="345345" android:layout_centerHorizontal="true"
                    />
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ivPaymentDefault" android:src="@drawable/payment_default"
                    android:layout_gravity="right|center_vertical" android:layout_weight="0.1"
                    android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <SeekBar
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/seekBar"/>
    </LinearLayout>
</RelativeLayout>