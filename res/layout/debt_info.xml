<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="@color/background_app"
              android:orientation="vertical">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_gravity="center_horizontal">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView" android:src="@drawable/ok" android:tint="@color/colorIcon"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ill_details"
                android:id="@+id/textView2" style="@style/styleLabel_2" android:textColor="@color/colorIcon"
                android:paddingLeft="5dp"/>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/infoDebtLayout"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:background="@android:color/background_light"
            android:layout_margin="5dp">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" android:paddingRight="5dp">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView1" android:src="@drawable/dollar" android:tint="@android:color/darker_gray"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Сумма займа"
                    android:id="@+id/textView3" style="@style/styleLabel_2" android:layout_gravity="center_vertical"
                    android:layout_weight="1"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/infoDebt" android:paddingTop="5dp"
                    android:paddingBottom="5dp" style="@style/styleValue" android:textColor="@android:color/black"
                    android:layout_weight="1" android:gravity="right"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:paddingRight="5dp">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView2" android:src="@drawable/perc48"
                    android:layout_gravity="center_vertical" android:tint="@android:color/darker_gray"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/mll_details_overpayment"
                    android:id="@+id/textView4" android:layout_weight="1" android:paddingLeft="5dp"
                    style="@style/styleLabel_2" android:layout_gravity="center_vertical" android:textSize="20sp"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:layout_weight="1">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/infoDeltaAllPayment" style="@style/styleValue"
                        android:textColor="@android:color/black" android:gravity="right"
                        android:layout_gravity="right"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/digitAllPay" android:layout_gravity="right" android:textSize="12sp"
                        android:gravity="top"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/infoDeltaOnePayment" android:layout_gravity="right" style="@style/styleValue"
                        android:textColor="@android:color/black"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="платежей 1x"
                        android:id="@+id/digitOnePayment" android:layout_gravity="right" android:gravity="top"
                        android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:paddingRight="5dp">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView3" android:src="@drawable/sum48"
                    android:layout_gravity="center_vertical" android:tint="@android:color/darker_gray"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/mll_details_total"
                    android:id="@+id/textView6" style="@style/styleLabel_2" android:paddingLeft="5dp"
                    android:layout_weight="1" android:textSize="20sp"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView7" style="@style/styleValue" android:textColor="@android:color/black"
                    android:layout_weight="1" android:paddingTop="5dp" android:paddingBottom="5dp"
                    android:gravity="right"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" android:background="@color/infoDateBackground" android:visibility="invisible">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvInfoDate"
                    android:layout_marginTop="5dp" android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical|center_horizontal" android:paddingTop="5dp"
                    android:textSize="22sp" style="@style/styleValue"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/infoDate" android:layout_gravity="center_horizontal" android:paddingTop="5dp"
                    android:paddingBottom="5dp" style="@style/styleValue"/>
        </LinearLayout>
    </LinearLayout>
    <!--<LinearLayout
            android:id="@+id/viewGraphLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/infoDebtLayout">
        <ru.omdroid.DebtCalc.CustomView.DrawingBar
                android:id="@+id/viewGraph"
                android:layout_width="wrap_content"
                android:layout_height="25dp"/>
    </LinearLayout>-->
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:layout_weight="1"
            android:background="@android:color/background_light" android:padding="5dp" android:layout_margin="5dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/info_payment_label"
                android:id="@+id/textView" android:layout_gravity="center_horizontal"
                android:textColor="@color/infoPaymentIcon" android:textSize="12sp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/infoPayment" android:layout_gravity="center_horizontal" android:paddingTop="5dp"
                android:paddingBottom="5dp" style="@style/styleValue"/>
        <EditText
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/etPayment"
                android:inputType="numberDecimal" style="@style/styleValue"
                android:maxLines="1"
                android:layout_column="1" android:gravity="center_vertical|center_horizontal"
                android:layout_gravity="center_horizontal"/>
        <SeekBar
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/seekBar"/>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/writePayment"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="0dp" android:layout_centerHorizontal="true"
            android:layout_below="@id/infoDebtLayout" android:visibility="invisible">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:id="@+id/bMinusPayment" android:enabled="false"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:id="@+id/bPlusPayment"
                android:layout_column="2"/>
    </LinearLayout>
</LinearLayout>